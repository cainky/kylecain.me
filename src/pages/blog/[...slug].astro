---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id.replace(/\.md$/, '') },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await render(post);

const formattedDate = post.data.date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Calculate reading time
function getReadingTime(content: string): number {
  const wordsPerMinute = 200;
  const words = content.split(/\s+/).length;
  return Math.ceil(words / wordsPerMinute);
}
---

<BaseLayout
  title={`${post.data.title} | Kyle Cain`}
  description={post.data.description}
  image={post.data.image}
>
  <article class="pt-24 pb-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <!-- Header -->
      <header class="mb-8 sm:mb-12">
        <div class="flex flex-wrap items-center gap-2 sm:gap-3 mb-4 text-sm text-text-secondary">
          {post.data.category && (
            <>
              <span class="px-2 py-1 bg-primary/10 text-primary rounded-md">
                {post.data.category}
              </span>
              <span class="w-1 h-1 rounded-full bg-text-secondary"></span>
            </>
          )}
          <time datetime={post.data.date.toISOString()}>
            {formattedDate}
          </time>
        </div>

        <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-text-primary mb-4 sm:mb-6 text-balance">
          {post.data.title}
        </h1>

        <p class="text-base sm:text-lg md:text-xl text-text-secondary">
          {post.data.description}
        </p>
      </header>

      <!-- Cover Image -->
      {post.data.image && (
        <div class="relative -mx-4 sm:-mx-6 lg:-mx-16 mb-12 rounded-xl overflow-hidden">
          <img
            src={post.data.image}
            alt={post.data.title}
            class="w-full h-auto"
          />
        </div>
      )}

      <!-- Table of Contents -->
      {headings.length > 2 && (
        <nav class="mb-8 sm:mb-12 p-4 sm:p-6 bg-surface rounded-xl border border-border">
          <h2 class="text-base sm:text-lg font-semibold mb-3 sm:mb-4">Table of Contents</h2>
          <ul class="space-y-2">
            {headings
              .filter((h) => h.depth <= 3)
              .map((heading) => (
                <li
                  style={`padding-left: ${(heading.depth - 2) * 1}rem`}
                >
                  <a
                    href={`#${heading.slug}`}
                    class="text-text-secondary hover:text-primary transition-colors text-sm py-1 inline-block"
                  >
                    {heading.text}
                  </a>
                </li>
              ))}
          </ul>
        </nav>
      )}

      <!-- Content -->
      <div class="prose prose-invert prose-lg max-w-none">
        <Content />
      </div>

      <!-- Tags -->
      {post.data.tags && post.data.tags.length > 0 && (
        <div class="mt-12 pt-8 border-t border-border">
          <div class="flex flex-wrap gap-2">
            {post.data.tags.map((tag) => (
              <span class="px-3 py-1 text-sm bg-surface border border-border rounded-full text-text-secondary">
                #{tag}
              </span>
            ))}
          </div>
        </div>
      )}

      <!-- Back to Blog -->
      <div class="mt-8 sm:mt-12 pt-6 sm:pt-8 border-t border-border">
        <a
          href="/blog"
          class="inline-flex items-center text-primary hover:underline min-h-[44px] py-2"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to all articles
        </a>
      </div>
    </div>
  </article>
</BaseLayout>

<style is:global>
  /* Prose styling for markdown content */
  .prose {
    @apply text-text-primary;
  }

  .prose h2 {
    @apply text-xl sm:text-2xl font-bold mt-8 sm:mt-12 mb-3 sm:mb-4 text-text-primary;
  }

  .prose h3 {
    @apply text-lg sm:text-xl font-semibold mt-6 sm:mt-8 mb-2 sm:mb-3 text-text-primary;
  }

  .prose h4 {
    @apply text-base sm:text-lg font-medium mt-4 sm:mt-6 mb-2 text-text-primary;
  }

  .prose p {
    @apply mb-4 sm:mb-6 leading-relaxed text-text-secondary text-sm sm:text-base;
  }

  .prose a {
    @apply text-primary hover:underline;
  }

  .prose ul,
  .prose ol {
    @apply mb-4 sm:mb-6 pl-4 sm:pl-6 text-text-secondary text-sm sm:text-base;
  }

  .prose ul {
    @apply list-disc;
  }

  .prose ol {
    @apply list-decimal;
  }

  .prose li {
    @apply mb-2;
  }

  .prose blockquote {
    @apply border-l-4 border-primary pl-4 italic my-6 text-text-secondary;
  }

  .prose pre {
    @apply bg-surface border border-border rounded-lg p-3 sm:p-4 overflow-x-auto my-4 sm:my-6 text-xs sm:text-sm;
  }

  .prose code {
    @apply font-mono text-xs sm:text-sm;
  }

  .prose :not(pre) > code {
    @apply bg-surface px-1.5 py-0.5 rounded text-secondary;
  }

  .prose img {
    @apply rounded-lg my-8;
  }

  .prose hr {
    @apply border-border my-12;
  }

  .prose strong {
    @apply text-text-primary font-semibold;
  }

  .prose table {
    @apply w-full my-6 border-collapse;
  }

  .prose th,
  .prose td {
    @apply border border-border px-4 py-2 text-left;
  }

  .prose th {
    @apply bg-surface font-semibold;
  }
</style>
