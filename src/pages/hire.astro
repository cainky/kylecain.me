---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';

const services = [
  {
    title: 'Full-Stack Development',
    description: 'End-to-end web applications with modern frameworks, APIs, and databases.',
    icon: 'code',
  },
  {
    title: 'System Architecture',
    description: 'Scalable, maintainable architectures designed for growth and performance.',
    icon: 'architecture',
  },
  {
    title: 'Cloud & DevOps',
    description: 'Cloud infrastructure setup, CI/CD pipelines, containerization, and deployment automation.',
    icon: 'cloud',
  },
  {
    title: 'Technical Consulting',
    description: 'Code reviews, performance optimization, and strategic technical guidance.',
    icon: 'consulting',
  },
];

const process = [
  {
    step: '01',
    title: 'Discovery',
    description: 'We discuss your project goals, requirements, and timeline to ensure alignment.',
  },
  {
    step: '02',
    title: 'Proposal',
    description: 'I provide a detailed scope, timeline, and transparent pricing for your project.',
  },
  {
    step: '03',
    title: 'Build',
    description: 'Iterative development with regular updates and opportunities for feedback.',
  },
  {
    step: '04',
    title: 'Launch',
    description: 'Deployment, documentation, and knowledge transfer to ensure your success.',
  },
];
---

<BaseLayout
  title="Hire Me | Kyle Cain"
  description="Hire Kyle Cain for your next software project. Full-stack development, system architecture, and technical consulting."
>
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center justify-center px-4 pt-24">
    <div class="max-w-4xl mx-auto text-center">
      <div class="inline-block mb-6 animate-fade-in">
        <span class="px-4 py-1.5 text-xs sm:text-sm font-medium bg-secondary/10 text-secondary rounded-full border border-secondary/20">
          Available for new projects
        </span>
      </div>

      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-6 animate-fade-up" style="animation-delay: 0.1s">
        Let me build something
        <span class="text-gradient">interesting</span> for you
      </h1>

      <p class="text-text-secondary text-base sm:text-lg md:text-xl max-w-2xl mx-auto mb-8 animate-fade-up" style="animation-delay: 0.2s">
        I'm a software developer passionate about crafting elegant solutions to complex problems.
        Whether you need a full application or technical expertise, I'm here to help.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-up" style="animation-delay: 0.3s">
        <a href="#contact" class="btn-primary">
          <span class="flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Start a Conversation
          </span>
        </a>
        <a href="/projects" class="btn-secondary">
          View My Work
        </a>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <Section>
    <div class="text-center mb-12 animate-on-scroll">
      <h2 class="text-2xl md:text-3xl font-bold mb-3">
        What I <span class="text-gradient">offer</span>
      </h2>
      <p class="text-text-secondary text-sm sm:text-base max-w-2xl mx-auto">
        Comprehensive software development services tailored to your needs
      </p>
    </div>

    <div class="grid sm:grid-cols-2 gap-4 sm:gap-6">
      {services.map((service, index) => (
        <div
          class="group card hover:border-primary/50 animate-on-scroll"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="flex items-start gap-4">
            <div class="p-3 bg-primary/10 rounded-lg group-hover:bg-primary/20 transition-colors">
              {service.icon === 'code' && (
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
              )}
              {service.icon === 'architecture' && (
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
              )}
              {service.icon === 'cloud' && (
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
                </svg>
              )}
              {service.icon === 'consulting' && (
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              )}
            </div>
            <div>
              <h3 class="text-lg font-semibold text-text-primary mb-2 group-hover:text-primary transition-colors">
                {service.title}
              </h3>
              <p class="text-text-secondary text-sm">
                {service.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </Section>

  <!-- Process Section -->
  <Section>
    <div class="text-center mb-12 animate-on-scroll">
      <h2 class="text-2xl md:text-3xl font-bold mb-3">
        How I <span class="text-gradient">work</span>
      </h2>
      <p class="text-text-secondary text-sm sm:text-base max-w-2xl mx-auto">
        A straightforward process designed for clarity and collaboration
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {process.map((step, index) => (
        <div
          class="relative animate-on-scroll"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="text-6xl font-bold text-primary/10 mb-2">
            {step.step}
          </div>
          <h3 class="text-lg font-semibold text-text-primary mb-2">
            {step.title}
          </h3>
          <p class="text-text-secondary text-sm">
            {step.description}
          </p>
          {index < process.length - 1 && (
            <div class="hidden lg:block absolute top-8 -right-3 w-6 text-primary/30">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          )}
        </div>
      ))}
    </div>
  </Section>

  <!-- Contact Section -->
  <Section id="contact">
    <div class="max-w-2xl mx-auto">
      <div class="text-center mb-10 animate-on-scroll">
        <h2 class="text-2xl md:text-3xl font-bold mb-3">
          Let's <span class="text-gradient">talk</span>
        </h2>
        <p class="text-text-secondary text-sm sm:text-base">
          Tell me about your project and let's explore how I can help
        </p>
      </div>

      <div class="card animate-on-scroll" style="animation-delay: 0.1s">
        <div class="space-y-6">
          <div class="text-center">
            <p class="text-text-secondary mb-6">
              The best way to reach me is by email. I typically respond within 24-48 hours.
            </p>
          </div>

          <!-- Email CTA -->
          <a
            href="mailto:contact@kylecain.me"
            class="flex items-center justify-center gap-3 p-5 bg-primary/10 border border-primary/30 rounded-lg hover:bg-primary/20 transition-all group"
          >
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <div class="text-left">
              <div class="font-medium text-primary">contact@kylecain.me</div>
              <div class="text-xs text-text-secondary">Send me an email</div>
            </div>
          </a>

          <div class="grid sm:grid-cols-2 gap-4 pt-4">
            <a
              href="https://www.linkedin.com/in/kyle-cain/"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center gap-3 p-4 bg-surface border border-border rounded-lg hover:border-primary/50 hover:bg-primary/5 transition-all group"
            >
              <svg class="w-5 h-5 text-text-secondary group-hover:text-primary transition-colors" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              <span class="text-sm text-text-secondary group-hover:text-primary transition-colors">LinkedIn</span>
            </a>

            <a
              href="https://github.com/cainky"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center gap-3 p-4 bg-surface border border-border rounded-lg hover:border-primary/50 hover:bg-primary/5 transition-all group"
            >
              <svg class="w-5 h-5 text-text-secondary group-hover:text-primary transition-colors" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm text-text-secondary group-hover:text-primary transition-colors">GitHub</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </Section>
</BaseLayout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
  }

  .animate-fade-up {
    opacity: 0;
    animation: fade-up 0.6s ease-out forwards;
  }
</style>
