---
interface Props {
  title?: string;
  subtitle?: string;
  class?: string;
  id?: string;
}

const { title, subtitle, class: className = '', id } = Astro.props;
---

<section id={id} class={`py-12 sm:py-16 md:py-24 ${className}`}>
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    {(title || subtitle) && (
      <div class="mb-8 sm:mb-12 animate-on-scroll">
        {title && <h2 class="section-title">{title}</h2>}
        {subtitle && <p class="text-text-secondary max-w-2xl text-sm sm:text-base">{subtitle}</p>}
      </div>
    )}
    <slot />
  </div>
</section>
