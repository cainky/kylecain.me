---
interface Props {
  title: string;
  description: string;
  slug: string;
  date: Date;
  image?: string;
  category?: string;
  readingTime?: number;
}

const { title, description, slug, date, image, category, readingTime } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a href={`/blog/${slug}`} class="block group">
  <article class="card overflow-hidden hover:-translate-y-1 transition-all duration-300">
    {image && (
      <div class="relative -mx-4 sm:-mx-6 -mt-4 sm:-mt-6 mb-4 sm:mb-6 h-40 sm:h-48 overflow-hidden">
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-surface/80 to-transparent"></div>
      </div>
    )}

    <div class="flex flex-wrap items-center gap-2 sm:gap-3 mb-3 text-xs text-text-secondary">
      {category && (
        <>
          <span class="px-2 py-1 bg-primary/10 text-primary rounded-md">
            {category}
          </span>
          <span class="w-1 h-1 rounded-full bg-text-secondary"></span>
        </>
      )}
      <time datetime={date.toISOString()}>
        {formattedDate}
      </time>
      {readingTime && (
        <>
          <span class="w-1 h-1 rounded-full bg-text-secondary"></span>
          <span>{readingTime} min read</span>
        </>
      )}
    </div>

    <h3 class="text-lg sm:text-xl font-semibold text-text-primary mb-2 group-hover:text-primary transition-colors line-clamp-2">
      {title}
    </h3>

    <p class="text-text-secondary text-sm line-clamp-2 sm:line-clamp-3">
      {description}
    </p>

    <div class="mt-3 sm:mt-4 flex items-center text-primary text-sm font-medium min-h-[44px]">
      <span>Read more</span>
      <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  </article>
</a>
